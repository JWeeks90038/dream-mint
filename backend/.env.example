# Environment Configuration
NODE_ENV=development  # development | production

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration - Test Mode
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-test-webhook-secret-here

# Stripe Configuration - Live Mode (for production)
STRIPE_LIVE_SECRET_KEY=sk_live_your-stripe-live-secret-key-here
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your-stripe-live-publishable-key-here
STRIPE_LIVE_WEBHOOK_SECRET=whsec_your-live-webhook-secret-here

# Blockchain RPC URLs
ALCHEMY_API_KEY=your-alchemy-api-key-here
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-alchemy-api-key-here
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-alchemy-api-key-here
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-alchemy-api-key-here
POLYGON_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your-alchemy-api-key-here

# Wallet Private Keys (NEVER commit real keys to git)
PRIVATE_KEY=your-test-wallet-private-key-here
MAINNET_PRIVATE_KEY=your-production-wallet-private-key-here

# Etherscan API Keys (for contract verification)
ETHERSCAN_API_KEY=your-etherscan-api-key-here
POLYGONSCAN_API_KEY=your-polygonscan-api-key-here

# IPFS/Pinata Configuration (if using)
PINATA_JWT=your-pinata-jwt-token-here
PINATA_API_KEY=your-pinata-api-key-here
PINATA_SECRET_API_KEY=your-pinata-secret-api-key-here

# Web3.Storage Configuration (alternative IPFS provider)
WEB3_STORAGE_TOKEN=your-web3-storage-token-here

# Frontend Configuration
FRONTEND_URL=http://localhost:5173  # development | https://yourdomain.com for production
